<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  </head>
  <body>
    <%- include('menu.html') %>
    <h1>글 수정하기</h1>
    <div class = "container mt-4">
        <form action="/edit" method="post">
            <div class = "form-group">
                <label>제목</label>
                <input type = "text" name = "id" class = "form-control" value="<%= data._id %>" style= "display: none;"></input>
                <input type = "text" name = "title" class = "form-control" value="<%= data.title %>"></input>
            </div>
            <p></p>
            <div class = "form-group">
                <label>내용</label>
                <textarea name = "content" rows = "10" class="form-control"><%= data.content %></textarea>
            </div>
            <p></p>
            <div class = "form-group">
                <label>작성일</label>
                <input type = "date" class="form-control" name = "someDate" value= "<%= data.date %>"></textarea>
            </div>
            <p></p>
            <button type = "submit" class = "btn btn-warning" style = "float:right;">수정</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  </body>
</html>